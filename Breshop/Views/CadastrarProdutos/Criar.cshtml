@model Breshop.Models.Produto

<!DOCTYPE html>
<html style="font-size: 16px;" lang="pt">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="Tendencias, Ofertas da semana">
    <meta name="description" content="">
    <title>Calçados</title>
    <link rel="stylesheet" href="~/css/nicepage.css" />
    <link rel="stylesheet" href="~/css/Calçados.css" />
    <script class="u-script" type="text/javascript" src="~/js/jquery.js"></script>
    <script class="u-script" type="text/javascript" src="~/js/nicepage.js"></script>
    <meta name="generator" content="Nicepage 4.17.10, nicepage.com">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Ubuntu:300,300i,400,400i,500,500i,700,700i">
    <meta name="theme-color" content="#478ac9">
    <meta name="twitter:site">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Calçados">
    <meta name="twitter:description" content="">
    <meta property="og:title" content="Calçados">
    <meta property="og:type" content="website">
</head>
<body class="u-body u-xl-mode" data-lang="pt">
    <div class="u-clearfix u-sheet u-sheet-1">
        <h2>Cadastrar Produto</h2>
        <form asp-action="Criar">
            <div class="u-container-style u-list-item u-repeater-item">
                <label asp-for="Categoria" class="control-label"></label>
                <span asp-validation-for="Categoria" class="text-danger"></span>
                <select asp-for="Categoria">
                    <option value="Calcado">Calçados</option>
                    <option value="Feminino">Feminino</option>
                    <option value="Ofertas">Ofertas</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Infantil">Infantil</option>
                    <option value="Relogios">Relógios</option>
                </select>
            </div>
            <div class="u-container-style u-list-item u-repeater-item">
                <label asp-for="Tamanho" class="control-label"></label>
                <input asp-for="Tamanho" class="form-control" />
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>
            <div class="u-container-style u-list-item u-repeater-item">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="u-container-style u-list-item u-repeater-item">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="u-container-style u-list-item u-repeater-item">
                <label asp-for="Sexo" class="control-label"></label>
                <input asp-for="Sexo" class="form-control" />
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="u-container-style u-list-item u-repeater-item">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div>
        <a asp-controller="Produto" asp-action="Index">Voltar</a>
    </div>
</body>


