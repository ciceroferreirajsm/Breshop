@model List<Breshop.Models.Produto>

<head>
    <title>Página Inicial</title>
    <link rel="stylesheet" href="~/css/nicepage.css" />
    <link rel="stylesheet" href="~/css/Ofertas.css" />
    <link rel="stylesheet" href="~/css/Página-Inicial.css" />
    <script class="u-script" type="text/javascript" src="~/js/jquery.js"></script>
    <script class="u-script" type="text/javascript" src="~/js/Carrinho/Carrinho.js"></script>
    <script class="u-script" type="text/javascript" src="~/js/nicepage.js"></script>
</head>
<body class="u-body u-xl-mode" data-lang="pt">
    <section class="u-align-center u-clearfix u-section-1" id="sec-91ec" style="margin-left: 7%; margin-right: 7%;">
        <div class="u-clearfix u-sheet u-sheet-1">
            <h2 class="">Bem vindo a Breshop</h2>
            <div class="u-carousel u-expanded-width-xs u-gallery u-layout-carousel u-lightbox u-no-transition u-show-text-none u-gallery-1" data-interval="5000" data-u-ride="carousel" id="carousel-9387">
                <ol class="u-absolute-hcenter u-carousel-indicators u-carousel-indicators-1">
                    <li data-u-target="#carousel-9387" data-u-slide-to="0" class="u-active u-grey-70 u-shape-circle" style="width: 10px; height: 10px;"></li>
                    <li data-u-target="#carousel-9387" data-u-slide-to="1" class="u-grey-70 u-shape-circle" style="width: 10px; height: 10px;"></li>
                </ol>
                <div class="u-carousel-inner u-gallery-inner" role="listbox">
                    @if (Model != null)
                    {
                        <div class="u-active u-carousel-item u-gallery-item u-carousel-item-1">
                            <div class="u-back-slide">
                                <img class="" style="width:400px; height: 400px" src="@Model.Where(x => x.Categoria == "Ofertas").Select(x => x.UrlImagem).FirstOrDefault()">
                            </div>
                            <div class="u-over-slide u-over-slide-1">
                                <h3 class="u-gallery-heading"></h3>
                                <p class="u-gallery-text"></p>
                            </div>
                        </div>
                        <div class="u-carousel-item u-gallery-item u-carousel-item-2">
                            <div class="u-back-slide">
                                <img class="" style="width:400px; height: 400px" src="@Model.Where(x => x.Categoria == "Ofertas").Select(x => x.UrlImagem).LastOrDefault()">
                            </div>
                            <div class="u-over-slide u-over-slide-2">
                                <h3 class="u-gallery-heading"></h3>
                                <p class="u-gallery-text"></p>
                            </div>
                        </div>
                    }
                </div>
                <a class="u-absolute-vcenter u-carousel-control u-carousel-control-prev u-grey-70 u-icon-circle u-opacity u-opacity-70 u-spacing-10 u-text-white u-carousel-control-1" href="#carousel-9387" role="button" data-u-slide="prev">
                    <span aria-hidden="true">
                        <svg viewBox="0 0 451.847 451.847">
                            <path d="M97.141,225.92c0-8.095,3.091-16.192,9.259-22.366L300.689,9.27c12.359-12.359,32.397-12.359,44.751,0
c12.354,12.354,12.354,32.388,0,44.748L173.525,225.92l171.903,171.909c12.354,12.354,12.354,32.391,0,44.744
c-12.354,12.365-32.386,12.365-44.745,0l-194.29-194.281C100.226,242.115,97.141,234.018,97.141,225.92z"></path>
                        </svg>
                    </span>
                </a>
                <a class="u-absolute-vcenter u-carousel-control u-carousel-control-next u-grey-70 u-icon-circle u-opacity u-opacity-70 u-spacing-10 u-text-white u-carousel-control-2" href="#carousel-9387" role="button" data-u-slide="next">
                    <span aria-hidden="true">
                        <svg viewBox="0 0 451.846 451.847">
                            <path d="M345.441,248.292L151.154,442.573c-12.359,12.365-32.397,12.365-44.75,0c-12.354-12.354-12.354-32.391,0-44.744
L278.318,225.92L106.409,54.017c-12.354-12.359-12.354-32.394,0-44.748c12.354-12.359,32.391-12.359,44.75,0l194.287,194.284
c6.177,6.18,9.262,14.271,9.262,22.366C354.708,234.018,351.617,242.115,345.441,248.292z"></path>
                        </svg>
                    </span>
                </a>
            </div>
        </div>
    </section>
    <section class="" style="margin-left: 7%; margin-right: 7%;">
        <h2 class="outras-ofertas">Outras ofertas</h2>
        <div class="lista-produtos">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="grid-produtos">
                        <img alt="" class="imagem-produtos" src="@item.UrlImagem">
                        <div class="u-container-layout u-valign-top u-container-layout-2">
                            <h4 class="">@item.Descricao</h4>
                            <div class="carrinho-item--price">@item.Preco.ToString("C")</div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>

</body>